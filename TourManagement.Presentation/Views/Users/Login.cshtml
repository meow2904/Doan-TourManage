@model TourManagement.Models.DBContext.User

@{
    ViewBag.Title = "Login";
}
<div class="m-auto pt-5">
    <h4 class="text-center">Đăng nhập</h4>
    @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "form-horizontal d-flex justify-content-center " }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-3 border">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="col-2 py-0 m-0">Email</label>
                <div class="col-12">
                    <input type="text" id="Email" name="Email" placeholder="Enter your email" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-0">
                <label class="col-2 py-0 m-0">Password</label>
                <div class="col-12">
                    <input type="password" id="Password" name="Password" placeholder="Enter your password" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-danger text-center" style="height: 30px;">@ViewBag.MessageError</div>
            <div class="form-group row m-0">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
            </div>
            <div>
                <div class="col-md-12 text-center bg-light">
                    @Html.ActionLink("Register", "Register")
                </div>
            </div>
        </div>
    }
</div>