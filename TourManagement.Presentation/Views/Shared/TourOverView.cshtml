@model TourManagement.Models.DBContext.Tour
<div class="col-md-3 py-3">
    <div class="card h-100">
        <div class="h-50"><img src="../../Content/images/@Model.Image" class="card-img-top img-thumbnail h-100" alt="@Model.Name"></div>
        <div class="card-body d-flex flex-column justify-content-between h-auto">
            <a class="card-title font-weight-bold" style="color: black;" href="/Tours/Details?id=@Model.Id">@Model.Name</a>
            <p>Giá từ: <span class="font-weight-bold">@Model.PriceOfAdult  đ/khách</span></p>
                @*<a href="/Tours/Details?id=@Model.Id" class="btn btn-primary w-50">View More</a>*@
        </div>
    </div>
</div>