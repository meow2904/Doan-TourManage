<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/Site.js" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5 fixed-top">

        <div class="col-2 text-right">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                <img class="border rounded-circle" src="~/Content/images/logo1.PNG" style="width: 50px; height:50px">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse row" id="navbarSupportedContent">
            <ul class="navbar-nav col">
                <li class="nav-item dropdown" id="group-tour">
                    <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "" })">TOUR</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("GetByCategory", "Tours", new { category = "Trong nước", page = 1 })">Trong nước</a>
                        <a class="dropdown-item" href="@Url.Action("GetByCategory", "Tours", new { category = "Nước Ngoài", page = 1 })">Nước ngoài</a>
                    </div>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("KHÁCH SẠN", "Index", "Hotels", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("GIỚI THIỆU", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>

            @using (Html.BeginForm("SearchTour", "Home", FormMethod.Get, new { @class = "form-inline my-2 my-lg-0 col-4" }))
            {
                <input class="form-control mr-sm-2 btn-none" id="seach" name="search" type="search" placeholder="Search tour" aria-label="Search">
                <button class="btn my-2 my-sm-0 btn-none" type="submit"><img src="~/Content/images/searchbtn.svg" width="25" height="25" /></button>
            }
            @*<form class="form-inline my-2 my-lg-0 col-4" action="SearchTour">
                    <input class="form-control mr-sm-2 btn-none" id="seach" name="search" type="search" placeholder="Search tour" aria-label="Search">
                    <button class="btn my-2 my-sm-0 btn-none" type="submit"><img src="~/Content/images/searchbtn.svg" width="25" height="25" /></button>
                </form>*@

            @Html.Partial("LoginPatial")
        </div>
    </nav>
    <div class="clearfix">

    </div>
    <div class="container body-content ptc-60">
        @RenderBody()
        <hr />
        <div class="card-footer text-muted text-center">
            <p>Copyright &copy; 2021 - MeowMeow</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
   
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
