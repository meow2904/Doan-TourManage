@using TourManagement.Models.DBContext
@model IEnumerable<Tour>
@{
    ViewBag.Title = "Đi muôn nơi - Let's Go";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="py-3">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/images/tours/slide2.jpg" class="d-block w-100" height="500" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/tours/slide5.jpg" class="d-block w-100" height="500" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/tours/slide4.jpg" class="d-block w-100" height="500" alt="...">
            </div>
        </div>
    </div>
    <div class="container m-auto row">
        <div class="col-lg-12">
            @using (Html.BeginForm("SearchTour", "Home", FormMethod.Get, new { @class = "form-inline d-flex" }))
            {
                <div class="col-lg-4">
                    <h3>Điểm đến</h3>
                    <input class=" mr-sm-2 btn-none" id="seach" name="search" type="search" placeholder="Điểm đến" aria-label="Search">
                </div>

                <div class="col-lg-4">
                    <h3>Thời gian</h3>
                    <input type="date" placeholder="Date" name="datepick" id="datepick" class="" required>
                </div>

                <div class="col-lg-4">
                    <button class="btn btn-outline-success " type="submit">Search</button>
                </div>
            }
        </div>
    </div>

</div>
<div class="container pt-3 px-0">
    <div>
        <div class="seemore row">
            <div class="col-6 font-weight-bold  m-0 p-0">
                <h4>Tour nổi bật</h4>
            </div>
            <div class="col-6 text-right  m-0 p-0">
                <a href="@Url.Action("GetByCategory", "Tours", new { category = "Trong nước", page = 1 })" class="link"><img src="~/Content/images/eye.svg" height="15" width="15" /> Xem tất cả</a>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                @Html.Partial("TourOverView", item);
            }
        </div>
    </div>

    <div class="py-3">
        <div class="text-center py-3">
            <h3>Điểm đến yêu thích</h3>
        </div>
        <div class="row">

            <div class="col-3 text-center">
                <div class="destination">
                    <a href="@Url.Action("SearchTour", "Home", new { search = "Hạ Long", datepick = DateTime.Now })">
                        <img src="~/Content/images/destiantions/dd1.jpg" class="h-100 img-fluid" alt="dd1.jpg" re />
                        <div class="destination-name">
                            <p>VỊNH HẠ LONG</p>
                        </div>
                    </a>

                </div>
            </div>
            <div class="col-3 text-center">
                <div class="destination">
                    <a href="@Url.Action("SearchTour", "Home", new { search = "SaPa" , datepick = DateTime.Now })">
                        <img src="~/Content/images/destiantions/dd2.jpg" class="h-100 img-fluid" alt="dd2.jpg" />
                        <div class="destination-name">
                            <p>SAPA</p>
                        </div>
                    </a>

                </div>
            </div>
            <div class="col-3 text-center">
                <div class="destination">
                    <a href="@Url.Action("SearchTour", "Home", new { search = "Đà Nẵng", datepick = DateTime.Now  })">
                        <img src="~/Content/images/destiantions/dd3.jpg" class="h-100 img-fluid" alt="dd3.jpg" />
                        <div class="destination-name">
                            <p>ĐÀ NẴNG</p>
                        </div>
                    </a>

                </div>
            </div>
            <div class="col-3 text-center">
                <div class="destination">
                    <a href="@Url.Action("SearchTour", "Home", new { search = "Phú Quốc", datepick = DateTime.Now  })">
                        <img src="~/Content/images/destiantions/dd4.jpg" class="h-100 img-fluid" alt="dd4.jpg" />
                        <div class="destination-name">
                            <p>PHÚ QUỐC</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>