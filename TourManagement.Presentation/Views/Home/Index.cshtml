@using TourManagement.Models.DBContext
@model IEnumerable<Tour>
@{
    ViewBag.Title = "Tìm tour du lịch - Let's Go";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content py-3">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/images/slide1.jpg" class="d-block w-100" height="400" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/slide2.jpg" class="d-block w-100" height="400" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/slide3.jpg" class="d-block w-100" height="400" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        @Html.Partial("TourOverView", item);
    }
</div>
<div class="py-4">
    <div class="text-center py-3">
        <h3>Điểm đến yêu thích</h3>
    </div>
    <div class="row">

        <div class="col-3 text-center">
            <div class="destination">
                <a href="@Url.Action("SearchTour", "Home", new { search = "Hạ Long" })"><img src="~/Content/images/Destinations/dd1.jpg" class="h-100 img-fluid" alt="dd1.jpg" /></a>
                <div class="destination-name">
                    <p>VỊNH HẠ LONG</p>
                </div>
            </div>
        </div>
        <div class="col-3 text-center">
            <div class="destination">
                <a href="@Url.Action("SearchTour", "Home", new { search = "SaPa" })"><img src="~/Content/images/Destinations/dd2.jpg" class="h-100 img-fluid" alt="dd2.jpg" /></a>
                <div class="destination-name">
                    <p>SAPA</p>
                </div>
            </div>
        </div>
        <div class="col-3 text-center">
            <div class="destination">
                <a href="@Url.Action("SearchTour", "Home", new { search = "Đà Nẵng" })"><img src="~/Content/images/Destinations/dd3.jpg" class="h-100 img-fluid" alt="dd3.jpg" /></a>
                <div class="destination-name">
                    <p>ĐÀ NẴNG</p>
                </div>
            </div>
        </div>
        <div class="col-3 text-center">
            <div class="destination">
                <a href="@Url.Action("SearchTour", "Home", new { search = "Phú Quốc" })"><img src="~/Content/images/Destinations/dd4.jpg" class="h-100 img-fluid" alt="dd4.jpg" /></a>
                <div class="destination-name">
                    <p>PHÚ QUỐC</p>
                </div>
            </div>
        </div>
    </div>
</div>