<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5 fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
            <img class="border rounded-circle" src="~/Content/images/logo1.PNG" style="width: 50px; height:50px">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown" id="group-tour">
                    <a class="nav-link" href="@Url.Action("Index", "Home", new { area = ""})" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        TOUR
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("GetByCategory", "Tours",new { category="Trong nước"})">Trong nước</a>
                        <a class="dropdown-item" href="@Url.Action("GetByCategory", "Tours",new { category="Nước Ngoài"})">Nước ngoài</a>
                    </div>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("KHÁCH SẠN", "Index", "Hotels", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("GIỚI THIỆU", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="clearfix">

    </div>
    <div class="container-fluid" style="padding-top:75px; padding-left:0">
        <div class=" d-flex">
            <div class="left-menu ml-0" style="width: 240px; min-height: 100vh;">
                <div class="position-fixed" style="width:205px;">
                    @Html.Partial("_slideBar")
                </div>
            </div>
            <div class=" container-fluid px-4 pt-2">
                @RenderBody()
            </div>
        </div>
        <hr />
        <div class="card-footer text-muted text-center">
            <p>Copyright &copy; 2021 - MeowMeow</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
