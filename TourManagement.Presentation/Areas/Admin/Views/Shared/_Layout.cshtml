<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5 fixed-top">

        <div class="col-2 text-right">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                <img class="border rounded-circle" src="~/Content/images/tours/logo1.jpg" style="width: 50px; height:50px">
            </a>
        </div>

        <div class="collapse navbar-collapse row" id="navbarSupportedContent">
            <ul class="navbar-nav col-10">
                <li class="nav-item font-weight-bold">
                    <a href="@Url.Action("Index", "EmployeesManagement", new { area = "Admin", page =1 })" class="nav-link">
                        <img src="~/Content/images/management.svg" height="20" width="20" />
                        Employees
                    </a>
                </li>
                <li class="nav-item font-weight-bold">
                    <a href="@Url.Action("Index", "ToursManagement", new { area = "Admin" })" class="nav-link">
                        <img src="~/Content/images/travel-bag.svg" height="20" width="20" />
                        Tours
                    </a>
                </li>
                <li class="nav-item font-weight-bolder">
                    <a href="@Url.Action("Index", "HotelsManagement", new { area = "Admin" })" class="nav-link">
                        <img src="~/Content/images/hotel.svg" height="20" width="20" />
                        Hotels
                    </a>
                </li>
            </ul>
            <div>
                @Html.Partial("LoginPatial")
            </div>
        </div>
    </nav>
    <div class="container ptc-60">
        <div>
            @RenderBody()
        </div>
        <hr />
        <div class="card-footer text-muted text-center">
            <p>Copyright &copy; 2021 - MeowMeow</p>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
