@model IEnumerable<TourManagement.Models.DBContext.Employee>

@{
    ViewBag.Title = "Employee Mamagement";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Employee Management</h2>
    <hr />
</div>
<div class="py-2 row">
    <div class="col-7">
        <a href="@Url.Action("Create", "EmployeesManagement")" class="btn btn-primary">ADD</a>
    </div>
    <div class="col-5">
        @using (Html.BeginForm("Search", "", FormMethod.Get, new { @class = "form-inline my-2 my-lg-0" }))
        {
            <input class="form-control mr-sm-2 btn-none" id="seach" name="search" type="search" placeholder="Tìm kiếm nhân viên " aria-label="Search">
            <button class="btn my-2 my-sm-0 btn-none" type="submit"><img src="~/Content/images/searchbtn.svg" width="25" height="25" /></button>
        }
    </div>
</div>

<table class="table table-bordered ">
    <tr>
        <th>
            Name
        </th>
        <th>
            Gender
        </th>
        <th>
            Address
        </th>
        <th>
            Status Working
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Gender == true)
                {
                    <p>Nam</p>
                }
                else
                {
                    <p>Nữ</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusWorking)
            </td>
            <td class="d-flex border-bottom-0 border-left-0 border-right-0">
                <form action="@Url.Action("Delete","EmployeesManagement", new { id=item.Id })" method="post">
                    <a href="@Url.Action("Edit", "EmployeesManagement", new { id=item.Id })" class="btn btn-outline-primary mx-1">Edit</a>
                    <button type="submit" onclick="return confirm('Are you sure to delete this hotel?');" class="btn btn-outline-danger mx-1">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

