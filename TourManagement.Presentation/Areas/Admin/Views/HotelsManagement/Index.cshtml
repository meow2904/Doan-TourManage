@using TourManagement.Models.DBContext
@model IEnumerable<Hotel>

@{
    ViewBag.Title = "Hotels management | Let's Go";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Hotels Management</h2>
    <hr />
</div>
<div class="py-2">
    <a href="@Url.Action("Create", "HotelsManagement")" class="btn btn-primary">ADD</a>
</div>

<table class="table table-bordered ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a>@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <img style="max-width:150px;" src="~/Content/images/hotels/@item.Image" alt="@item.Name" />
        </td>
        <td class="d-flex border-bottom-0 border-left-0 border-right-0">
            <form action="@Url.Action("Delete","HotelsManagement", new { id=item.Id })" method="post">
                <a href="@Url.Action("Edit", "HotelsManagement", new { id=item.Id })" class="btn btn-outline-primary mx-1">Edit</a>
                <button type="submit" onclick="return confirm('Are you sure to delete this hotel?');" class="btn btn-outline-danger mx-1">Delete</button>
            </form>
        </td>
    </tr>
}

</table>
