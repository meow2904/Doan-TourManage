@model TourManagement.Models.DBContext.Hotel

@{
    ViewBag.Title = "Add hotel";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Add new hotel</h2>
<hr />
<form action="~/Admin/HotelsManagement/Create" method="post" class=" row form-horizontal" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col">
        <div class="form-group">
            <label class="control-label">Name</label>
            <div>
                <input type="text" class="form-control" name="Name" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Content</label>
            <div>
                <textarea class="form-control" name="Content" id="editor" rows="10"></textarea>
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Select images</label>
            <div class="row m-auto">
                <input type="text" id="Image" name="Image" class="w-100 form-control" />
                <input type="file" id="filesInput" name="filesInput" class="col-6" multiple required onchange="Getname()">
            </div>
        </div>

    </div>

    <div class="col">
        <div class="form-group">
            <label class="control-label">Phone</label>
            <div>
                <input type="number" name="Phone" id="Phone" class="form-control" min="1" />
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Address</label>
            <div>
                <input type="text" name="Address" id="Address" class="form-control" />
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Email</label>
            <div>
                <input type="text" name="Email" id="Address" class="form-control" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div>
                <input type="submit" value="Add" class="btn btn-success" />
                <a class="btn btn-secondary" href="@Url.Action("Index","HotelsManagement")">Cancel</a>
            </div>
        </div>
    </div>
</form>


@section scripts {
    <script src="~/Scripts/ckeditor5-build-classic/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor5-build-classic/ClassicEditor.js"></script>
}